{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "ES2019", "ES2017", "ES2015"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./app",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules", "dist"]
}
