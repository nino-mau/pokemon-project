meta {
  name: Update Gym
  type: http
  seq: 4
}

put {
  url: http://localhost:3000/api/gyms/{{gymId}}
  body: json
  auth: none
}

body:json {
  {
    "name": "Updated Gym",
    "location": "Updated City"
  }
}

assert {
  res.status: eq 200
}

tests {
  test("Updates gym successfully", function() {
    const data = res.getBody();
    expect(data).to.be.an("object");
    expect(data.name).to.equal("Updated Gym");
    expect(data.location).to.equal("Updated City");
  });
}
