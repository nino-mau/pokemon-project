meta {
  name: Update Pokemon
  type: http
  seq: 4
}

put {
  url: http://localhost:3000/api/pokemon/{{pokemonId}}
  body: json
  auth: none
}

body:json {
  {
    "name": "Updated Pokemon",
    "hp": 150
  }
}

assert {
  res.status: eq 200
}

tests {
  test("Updates pokemon successfully", function() {
    const data = res.getBody();
    expect(data).to.be.an("object");
    expect(data.name).to.equal("Updated Pokemon");
    expect(data.hp).to.equal(150);
  });
}
